<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.boundaries.screens.Graded">

    <!-- Header: title on the left -->
    <top>
        <HBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Graded Work">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="12.0" left="14.0" right="14.0" top="12.0" />
            </padding>
        </HBox>
    </top>

    <!-- Main content: a ScrollPane that fills available space -->
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <content>
                        <!-- The ListView grows with the ScrollPane/center area -->
                        <ListView fx:id="projectButtonListView" prefHeight="200.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets bottom="14.0" left="14.0" right="14.0" top="8.0" />
            </padding>
        </StackPane>
    </center>

</BorderPane>



